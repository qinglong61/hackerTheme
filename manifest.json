{
    "name": "hackerTheme",
    "description": "hacker style theme",
    "version": "1.0",
    "permissions": [
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "hackerTheme",
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
